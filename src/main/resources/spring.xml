<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="com.yet.spring.core.beans.Client">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="John Garcia"/>
    </bean>

    <bean id="eventLogger" class="com.yet.spring.core.loggers.ConsoleEventLogger"/>

    <bean id="app" class="com.yet.spring.core.App">
        <constructor-arg index="0" ref="client"/>
        <constructor-arg index="1" ref="eventLogger"/>
    </bean>

    <bean id="fileEventLogger" class="com.yet.spring.core.loggers.FileEventLogger">
        <constructor-arg value="outputText.txt"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>


</beans>